
<strong><h1>Posts</h1></strong><br>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Title</th>
      <th>Content</th>
      
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.user.name %></td>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= image_tag post.image.url(:thumb)%></td>
        
        <td><i><%= link_to 'Show', post ,class: 'link-to-text-color' %></i></td>
        <td><i><%= link_to 'Edit', edit_post_path(post),class: 'link-to-text-color' %></i></td>
        <td><i><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' },class: 'link-to-text-color' %></i></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path,class: 'link-to-text-color-2' %>
