<p id="notice"><%= notice %></p>

<h1>Post</h1>

<table>
  <thead>
    <tr>
      <th>Post title</th>
      <th>Post content</th>
     

    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.content %></td>
        <td><%= link_to 'Show', post %></td>
        
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Post', new_post_path([:user_id]) %>
