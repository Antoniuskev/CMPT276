<% @comments.each do |comment| %>
    <p><b><%= comment.user.name %>:&nbsp&nbsp&nbsp</b><%= comment.content %></p>
    <%= link_to "Edit |", edit_post_comment_path(comment.post, comment),class: 'link-to-text-color' %>
    <%= link_to "Delete comment ", [comment.post, comment], method: :delete,class: 'link-to-text-color' %>

<% end %>
<br>
<%= render "comments/form" %>